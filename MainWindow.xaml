<Window x:Class="TSSP_V3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSSP_V3"
        mc:Ignorable="d"
        Title="MainWindow" Height="534.307" Width="446.506">
    <Grid Margin="0,0,3.6,-0.4">
        
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock VerticalAlignment="Bottom" FontSize="20" 
        FontFamily="Arial" Grid.Row="0" HorizontalAlignment="Center">Имя</TextBlock>

        <TextBox x:Name ="Имя" Grid.Row="1" MaxLength="30" TextAlignment="Center" 
      FontSize="20" FontFamily="Arial" TextWrapping="Wrap" Width="400" Height="33"/>

        <TextBlock VerticalAlignment="Bottom" FontSize="20" 
        FontFamily="Arial" Grid.Row="2" HorizontalAlignment="Center">Фамилия</TextBlock>

        <TextBox x:Name ="Фамилия" Grid.Row="3" MaxLength="30" TextAlignment="Center" 
      FontSize="20" FontFamily="Arial" TextWrapping="Wrap" Width="400" Height="33"/>

        <TextBlock VerticalAlignment="Bottom" FontSize="20" 
        FontFamily="Arial" Grid.Row="4" HorizontalAlignment="Center">Пароль</TextBlock>

        <TextBox x:Name ="Пароль" Grid.Row="5" MaxLength="30" TextAlignment="Center" 
      FontSize="20" FontFamily="Arial" TextWrapping="Wrap" Width="400" Height="33"/>

        <Button x:Name="Enter" Content="Ввод" Grid.Row="10" FontSize="30" 
                Width="200" Height="50" Click="Vvod" IsDefault="True" />

    </Grid>
</Window>
