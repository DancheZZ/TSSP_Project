<Window x:Class="TSSP_V3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSSP_V3"
        mc:Ignorable="d"
        Background="DarkRed"
        Title="Регистрация" HorizontalAlignment="Center" Height="534.307" Width="446.506">
    <Grid Margin="0,0,3.6,-0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="381*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock VerticalAlignment="Center" FontSize="30" Foreground="DarkGray"   Text=" Имя"
        FontFamily="Arial" Grid.Row="0" Margin="117,20,182.8,17.8" Grid.Column="1" RenderTransformOrigin="0.745,0.514">
        </TextBlock>

        <TextBox x:Name ="Имя" Grid.Row="1" MaxLength="30" TextAlignment="Center" Background="SkyBlue" 
      FontSize="20" FontFamily="Arial" TextWrapping="Wrap" Width="400" Height="33" Margin="18,19.2,18.8,19.8" Grid.ColumnSpan="2"/>

        <TextBlock VerticalAlignment="Center" FontSize="30" Foreground="DarkGray" Text=" Фамилия "
        FontFamily="Arial" Grid.Row="2" HorizontalAlignment="Center"  Margin="85,21.2,149.8,14.6" Grid.Column="1" Width="146" Height="37" RenderTransformOrigin="0.607,0.538">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.161"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.239"/>
                </TransformGroup>
            </TextBlock.RenderTransform> Фамилия</TextBlock>

        <TextBox x:Name ="Фамилия" Grid.Row="3" MaxLength="30" TextAlignment="Center" Background="SkyBlue"
      FontSize="20" FontFamily="Arial" TextWrapping="Wrap" Width="400" Height="33" Margin="18,19.4,18.8,19.6" Grid.ColumnSpan="2"/>

        <TextBlock VerticalAlignment="Center" FontSize="30"   Foreground="DarkGray" Text=" Пароль"
        FontFamily="Arial" Grid.Row="4" HorizontalAlignment="Center" Margin="98,10.4,163.8,28.4" Grid.Column="1" Width="119"></TextBlock>

        <TextBox x:Name ="Пароль" Grid.Row="5" MaxLength="30" TextAlignment="Center" Background="SkyBlue" 
      FontSize="20" FontFamily="Arial" TextWrapping="Wrap" Width="400" Height="33" Margin="18,19.6,18.8,19.4" Grid.ColumnSpan="2"/>

        <Button x:Name="Enter" Content="Ввод" Grid.Row="6" FontSize="30" 
                Width="200" Height="50" Click="Vvod" IsDefault="True" Margin="62,11.6,118.8,11.2" Grid.Column="1" />

    </Grid>
</Window>
